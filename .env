# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/unnati_db

# JWT Configuration
JWT_SECRET=your-secret-key
JWT_EXPIRATION=8h

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=Unnati Cloud Labs <noreply@unnaticloudlabs.com>

# Google Cloud Platform Configuration
GCP_PROJECT_ID=your-project-id
GCP_ZONE=us-central1-a
GCP_REGION=us-central1
GCP_KEY_FILE=./path/to/your/gcp-key.json

# Guacamole Configuration
GUACAMOLE_URL=http://guacamole-server:8080/guacamole
GUACAMOLE_USERNAME=guacadmin
GUACAMOLE_PASSWORD=guacadmin
GUACAMOLE_SECRET=your-guacamole-secret-key

# VNC Configuration
VNC_PASSWORD=your-vnc-password

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Logging Configuration
LOG_LEVEL=info

# Credit System Configuration
DEFAULT_SIGNUP_CREDITS=5
